# 주어진 삼각형 경로의 최대값 찾기

triangle = [[7],
          [3, 8],
         [8, 1, 0],
        [2, 7, 4, 4],
       [4, 5, 2, 6, 5]]

def solution(tri):
    d = [[0] * i for i in range(1, len(tri) + 1)]
    d[0][0] = tri[0][0]

    for i in range(1, len(tri)):
        for j in range(i + 1):
            if j == 0:
                d[i][j] = tri[i][j] + d[i-1][0]
            elif j == i:
                d[i][j] = tri[i][j] + d[i-1][i-1]
            else:
                d[i][j] = tri[i][j] + max(d[i-1][j-1], d[i-1][j])
    
    return max(d[-1])

print(solution(triangle))